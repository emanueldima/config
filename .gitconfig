[color]
	ui = auto
[user]
	name = Emanuel Dima
	email = emanueldima@gmail.com
	signingkey = F6AB969B322C6290
[push]
	default = simple
[pull]
	rebase = true
[merge]
	ff = only
    conflictstyle = diff3
[rebase]
    autostash = true
[core]
	excludesfile = /Users/edima/.gitignore_global
	# pager = less -+$LESS -FRX
	pager = delta
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =

[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true

[alias]
	l = log -n 15 --pretty=oneline --abbrev-commit --decorate --branches --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
	ll =  log --pretty=oneline --abbrev-commit --decorate --branches --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cD) %C(bold blue)<%an>%Creset' --date=short
	llr = log --pretty=oneline --abbrev-commit --decorate --branches --graph --remotes --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cd) %C(bold blue)<%an>%Creset' --date=short
	st = status -s -b
	s = "!echo; git st; echo; git l"
	b = branch -v
	co = checkout
	fe = fetch --all
	up = "!git remote update -p; git merge --ff-only @{u}"
[http]
	postBuffer = 524288000
[diff]
	renameLimit = 6000
	noprefix = true
    colorMoved = default

[rerere]
	enabled = true

[commit]
	gpgsign = true

# [pager]
# 	diff = diff-so-fancy | less --tabs=1,5 -RFX
# 	show = diff-so-fancy | less --tabs=1,5 -RFX

[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22

[delta]
    navigate = true  # use n and N to move between diff sections
    diff-highlight = true
    line-numbers = true
    #diff-so-fancy = true
    # side-by-side = true

[interactive]
    diffFilter = delta --color-only
